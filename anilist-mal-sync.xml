<?xml version="1.0"?>
<Container version="2">
  <Name>AniList-MAL-Sync</Name>
  <Repository>ghcr.io/tareku99/anilist-mal-sync-v2:latest</Repository>
  <Registry>https://github.com/Tareku99/anilist-mal-sync-v2/pkgs/container/anilist-mal-sync-v2</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/Tareku99/anilist-mal-sync-v2/issues</Support>
  <Project>https://github.com/Tareku99/anilist-mal-sync-v2</Project>
  <Overview>Bidirectional sync service between AniList and MyAnimeList with OAuth authentication, conflict resolution, and Docker deployment.</Overview>
  <Category>Tools: Status:Stable</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/Tareku99/anilist-mal-sync-v2/main/anilist-mal-sync.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/Tareku99/anilist-mal-sync-v2/main/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="OAuth Port" Target="18080" Default="18080" Mode="tcp" Description="OAuth callback port for authentication" Type="Port" Display="always" Required="true" Mask="false">18080</Config>
  <Config Name="Data Directory" Target="/app/data" Default="/mnt/user/appdata/anilist-mal-sync/data" Mode="rw" Description="Contains config.yaml and tokens.json" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/anilist-mal-sync/data</Config>
</Container>
