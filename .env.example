# OAuth Configuration
OAUTH_PORT=18080
OAUTH_REDIRECT_URI=http://localhost:18080/callback

# AniList API Credentials
ANILIST_CLIENT_ID=your_anilist_client_id
ANILIST_CLIENT_SECRET=your_anilist_client_secret
ANILIST_AUTH_URL=https://anilist.co/api/v2/oauth/authorize
ANILIST_TOKEN_URL=https://anilist.co/api/v2/oauth/token
ANILIST_USERNAME=your_anilist_username

# MyAnimeList API Credentials
MAL_CLIENT_ID=your_mal_client_id
MAL_CLIENT_SECRET=your_mal_client_secret
MAL_AUTH_URL=https://myanimelist.net/v1/oauth2/authorize
MAL_TOKEN_URL=https://myanimelist.net/v1/oauth2/token
MAL_USERNAME=your_mal_username

# Sync Configuration
SYNC_MODE=bidirectional  # Options: anilist-to-mal, mal-to-anilist, bidirectional
SCORE_SYNC_MODE=auto  # Options: auto (normalize AniList 100-point to MAL 0-10), disabled
DRY_RUN=false
LOG_LEVEL=INFO

# Token Storage
TOKEN_FILE=data/tokens.json
